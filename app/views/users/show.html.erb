<h1>Welcome, <%= @user.name %>!</h1>

<a href="<%= edit_user_path(@user.id) %>">Update profile</a>
<a href="<%= user_path(@user.id) %>" data-method="delete" data-confirm="Are you sure you want to delete your profile?">Delete profile</a>

<h2>To Do</h2>

<a href="<%= new_task_path %>">Add new task</a>

<hr>

<table>
  <% @tasks.all.each do |task| %>
  <tr>
    <td><%= task.description %></td>
    <td>Smith</td> 
    <td>50</td>
  </tr>
  <% end %>
</table>




